@model IEnumerable<MT_app.core.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
</div>
<div class="row">
    <div class="col-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-lg-6 product-item">
                    <div class="d-flex justify-content-center  mt-5">
                        <div class="card p-3 bg-white">
                            <div class="about-product text-center mt-2">
                                <img class="product-img"
                                     src="https://png.pngtree.com/png-clipart/20230511/ourmid/pngtree-isolated-cat-on-white-background-png-image_7094927.png"\
                                     alt="product img">
                                <div>
                                    <h4>@item.Name</h4>
                                    <h6 class="mt-0 text-black-50">@item.Supplier!.Name</h6>
                                </div>
                            </div>
                            <div class="stats mt-2">
                                <div class="d-flex justify-content-between p-price">
                                    <span>Size M</span><span>M, L</span>
                                </div>
                                <div class="d-flex justify-content-between p-price">
                                    <span>Pro stand</span><span>@item.Price</span>
                                </div>
                                <div class="d-flex justify-content-between p-price">
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-2">
        <div class="row product-order">
            asd3
        </div>
    </div>

</div>

@section Heads {
    <link rel="stylesheet" href="~/css/productIndex.css" asp-append-version="true"/>
}