@using MT_app.core.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<MT_app.core.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-3">
        <a asp-action="Create">Create New</a>
    </div>
    <div class="col-9">
        <form class="form-inline">
            <div class="row">
                <div class="col-10">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                </div>
                <div class="col-2 product-search">
                    <button class="btn btn-outline-secondary my-2 my-sm-0 product-search-btn" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-2">
        <div class="row product-order">
            <div class="row product-categories">
                @foreach (var category in (ViewData["Categories"] as List<Category>)!)
                {
                    <div id="pc-@category.Id" class="productCategoryItem" onclick="searchByCategory(@category.Id)">
                        <h5 class="product-name">@category.Name</h5>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-3 product-item">
                    <div class="d-flex justify-content-center  mt-5">
                        <a style="text-decoration: none" asp-action="Details" asp-route-id="@item.Id">
                            <div class="card p-3">
                                <div class="about-product text-center mt-2">
                                    <div class="product-image">
                                        <img class="product-img"
                                             src="@item.Image"\
                                             alt="product img">
                                    </div>
                                    <div>
                                        <h5 class="product-name">@item.Name</h5>
                                    </div>
                                    <hr/>
                                </div>
                                <div class="stats mt-2">
                                    <div class="d-flex justify-content-between p-price">
                                        <span>Price:</span><span>@($"{item.Price:#,0} Đ")</span>
                                    </div>
                                    <div class="d-flex justify-content-between p-price">
                                        Details |
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Heads {
    <link rel="stylesheet" href="~/css/productIndex.css" asp-append-version="true"/>
}

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqPagination/1.4.1/jquery.jqpagination.min.js"></script>
}