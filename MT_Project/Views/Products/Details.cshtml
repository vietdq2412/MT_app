@model MT_app.core.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-7">
        <div>
            <h4>@Model.Name</h4>
            <hr/>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SupplierId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SupplierId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dd>
            </dl>
        </div>

    </div>
    <div class="col-5">
        <div class="row order-area">

        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <input id="quantity" type="text"/>
    <button onclick="addProductToCart()">Add to cart</button>
</div>
<script>
    function addProductToCart() {
        const quantity = $("#quantity").val();
        if (quantity !== null && !isNaN(quantity) && parseInt(quantity) > 0) {
            const url = `/Order/AddProductToOrder?productId=${@Model.Id}&quantity=${quantity}`;
            window.location.href = url;
        } else {
            alert("invalid quantity!");
        }
    }
</script>