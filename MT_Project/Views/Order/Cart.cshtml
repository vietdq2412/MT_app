@using System.Collections
@using MT_app.core.Models
@model IEnumerable<MT_app.core.Models.Order>

@{
    ViewData["Title"] = "Cart";
}

@section Heads{
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true"/>

}

<div class="row">
    <div class="col-8">
        <ul class="list-group list-group-flush">
            @foreach (var item in ((List<OrderDetail>)ViewData["orderDetails"])!)
            {
                <li class="list-group-item">
                    <div class="row p-2 bg-white border rounded">
                        <div class="col-md-2 mt-1">
                            <img class="img-fluid img-responsive rounded product-image" src="https://i.imgur.com/QpjAiHq.jpg">
                        </div>
                        <div class="col-md-7 mt-1">
                            <h5>@item.Product!.Name</h5>
                            <div class="mt-1 mb-1 spec-1">
                                <span>+ Light weight</span>
                                <span>+ Light weight</span>
                            </div>
                            <p class="text-justify text-truncate para mb-0">
                                @item.Quantity<br><br>
                            </p>
                        </div>
                        <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                            <div class="d-flex flex-row align-items-center">
                                <h4 class="mr-1">@item.Product.Price $</h4>
                                @* <span class="strike-text">$20.99</span> *@
                            </div>
                            <div class="d-flex flex-column mt-4">
                                <button class="btn btn-primary btn-sm" type="button">Details</button>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="col-4 p-2 bg-white border rounded">
        <div class="mb-3">
            <label for="total" class="form-label">Customer phone</label>
            <input type="text" id="phoneInput" class="form-control" id="total" placeholder="00">
            <div class="customerResult row">
            </div>
        </div>
        <div class="mb-3">
            <label for="customerName" class="form-label">Name</label>
            <input type="text" class="form-control" id="customerName" placeholder="Name">
        </div>
        <div class="mb-3">
            <label for="customerAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="customerAddress" placeholder="Address . . .">
        </div>
        <div class="mb-3">
            <label for="orderNote" class="form-label">Note</label>
            <input type="text" class="form-control" id="orderNote" placeholder=". . .">
        </div>
        <div class="mb-3">
            <button class="btn btn-primary btn-sm" type="button">
                <a asp-action="PlaceOrder">Order</a>
            </button>
        </div>

    </div>
</div>


@section Scripts
{
    <script>
        $(document).ready(function() {
            $("#getCustomersLink").click(function() {
                var phoneNumber = $("#phoneInput").val();
                var url = $(this).attr("href") + "?phoneNumber=" + phoneNumber;
                $(this).attr("href", url);
            });
        });

        $(document).ready(function() {
            var timeoutId;

            $("#phoneInput").on("input",
                function() {
                    clearTimeout(timeoutId);
                    timeoutId = setTimeout(function() {
                            var phoneNumber = $("#phoneInput").val();
                            $.ajax({
                                url: '@Url.Action("GetCustomersByContainPhoneNumber", "Customers")',
                                type: "GET",
                                data: { phoneNumber: phoneNumber },
                                success: function(response) {
                                    $(".customerResult").empty();

                                    response.forEach(function(customer) {
                                        $(".customerResult").append(
                                            "<div class=\"col-sm-3 col-lg-4 cusResultItem\">" +
                                            "    <h6>" +
                                            customer.name +
                                            "</h6>" +
                                            "    <h6>" +
                                            customer.phoneNumber +
                                            "</h6>" +
                                            "</div>"
                                        );
                                    });
                                },
                                error: function(xhr, status, error) {
                                    console.error(error);
                                }
                            });
                        },
                        500);
                });
        });
    </script>
}